<configuration>
<appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>converter.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%-15X{Resource}]  %-5level [%-4line] %-30logger{0} - %msg%n</pattern>
        </encoder>
    </appender>
   
    <appender name="out" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%-15X{Resource}]  %-5level [%-4line] %-30logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

<logger name="com.ibm.whi" level="info" />
    <root level="info">
        <appender-ref ref="out"/>
         <appender-ref ref="FILE"/>
     
    </root>

</configuration>